<div class="row">
  <%= render 'admin/shared/side_bar' %>
  <div class="col-7 d-flex flex-column">

    <div class="row">
      <div class="col-6"><h2>Name</h2></div>
      <div class="col-2 d-flex justify-content-center align-items-center"><h2>Edit</h2></div>
      <div class="col-2 d-flex justify-content-center align-items-center"><h2>Destroy</h2></div>
    </div>
    <div class="row">
      <% @categories.each do |category| %>
        <div class="col-6"><h3><%= category.name %></h3></div>
        <div class="col-2 d-flex justify-content-center align-items-center">
          <%= link_to edit_admin_category_path(category) do %>
            <i class="fa-solid fa-pencil"></i>
          <% end %>
        </div>
        <div class="col-2 d-flex justify-content-center align-items-center">
          <%= link_to admin_category_path(category),
                  method: :delete,
                  data: { confirm: "Are you sure?" } do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="modal fade" id="lectureYeuxSolution" tabindex="-1" aria-labelledby="lectureYeuxSolutionLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="lectureYeuxSolutionLabel">Voici les réponses:</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body row justify-content-center">
       <% if @game.name.downcase.include?("le retour") %>
          <% offset = 18 %>
        <% else %>
          <% offset = 0 %>
        <% end %>
        <% solution = JSON.parse @game.solution %>
        <% solutions = solution["solutions_list"] %>
        <% proposals = solution["proposals_list"] %>
        <% proposals.each_with_index do |proposal, index| %>
          <div class="expressions-card row col-6">
            <p class="col-12"><%= "Votre réponse #{index + 1}: #{@answers[index]}" %> </p>
            <%= image_tag "lecture_dans_les_yeux/photo-#{offset + index + 1}.jpeg", class: "photos-expression" %>
            <div class="row d-flex justify-content-around">
              <% proposal.each do |elt| %>
                <% if solutions[index] == elt %>
                  <p class="col-3 correct d-flex justify-content-around buttons button-dark button-small"><%= "#{elt}" %> </p>
                <% elsif @answers[index] == elt %>
                  <p class="col-3 incorrect d-flex justify-content-around buttons button-dark button-small"><%= "#{elt}" %> </p>
                <% else %>
                  <p class="col-3 d-flex justify-content-around buttons button-dark button-small"><%= "#{elt}" %> </p>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

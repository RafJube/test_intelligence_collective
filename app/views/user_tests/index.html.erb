<div class="container d-flex flex-column align-items-center">
  <h1>Voici vos tests déjà réalisés:</h1>
  <% @tests.each do |test| %>
    <div class="row card-category" data-controller="category-animation" data-action="click->category-animation#animation">
      <div class="col-4 button-category buttons">
        <%= test.category.name.upcase %>
      </div>
      <div class="col-4">
        <% @user_tests.each do |user_test| %>
          <% if user_test.test == test && user_test.completed == true %>
            <div class="buttons button-test">
              <%= link_to test_user_test_path(user_test.test.name, user_test) do %>
                <%= test.name.upcase %>
                <%= "#{user_test.score}%" %>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="container d-flex flex-column align-items-center">
  <h1>Voici vos tests déjà réalisés:</h1>
  <% @categories.each do |category| %>
    <div class="row card-category" data-controller="category-animation" data-action="click->category-animation#animation">
      <div class="col-4 button-category buttons">
        <%= category.name.upcase %>
      </div>
      <div class="col-4">
        <% @user_games.each do |user_game| %>
          <% if user_game.category == category && user_game.completed == true %>
            <div class="buttons button-game">
              <%= link_to game_user_game_path(user_game.game.name, user_game) do %>
                <%= user_game.game.name.upcase %>
                <%= "#{user_game.score}%" %>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

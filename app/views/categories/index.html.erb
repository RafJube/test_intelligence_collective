<div class="container">
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-lg-4 col-md-6 col-12 card-category cards">
        <%= link_to category_path(category.name) do %>
          <%= category.name.upcase %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
